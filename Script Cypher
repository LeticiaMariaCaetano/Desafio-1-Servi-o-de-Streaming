**RELAÇÕES DE COSNSUMO (WATCHED com propriedade rating)**

//FILMES
MATCH (u:User {name:"Eduardo"}), (m:Movie {title:"Harry Potter e o prisioneiro de Azkaban"})
MERGE (u)-[:WATCHED {rating:5}]->(m);

MATCH (u:User {name:"Mônica"}), (m:Movie {title:"Vidas Passadas"})
MERGE (u)-[:WATCHED {rating:4}]->(m);

MATCH (u:User {name:"Alessandra"}), (m:Movie {title:"Moulin Rouge"})
MERGE (u)-[:WATCHED {rating:5}]->(m);

MATCH (u:User {name:"Roberta"}), (m:Movie {title:"Anatomia de uma queda"})
MERGE (u)-[:WATCHED {rating:4}]->(m);

MATCH (u:User {name:"Fábio"}), (m:Movie {title:"As vantagens de ser invisível"})
MERGE (u)-[:WATCHED {rating:5}]->(m);

//SERIES

MATCH (u:User {name:"Sandra"}), (s:Series {title:"Dexter"})
MERGE (u)-[:WATCHED {rating:5}]->(s);

MATCH (u:User {name:"Leticia"}), (s:Series {title:"Treta"})
MERGE (u)-[:WATCHED {rating:4}]->(s);

MATCH (u:User {name:"Fernando"}), (s:Series {title:"Lúcifer"})
MERGE (u)-[:WATCHED {rating:4}]->(s);

MATCH (u:User {name:"Marisa"}), (s:Series {title:"The Office"})
MERGE (u)-[:WATCHED {rating:5}]->(s);

MATCH (u:User {name:"Elisa"}), (s:Series {title:"All Her Fault"})
MERGE (u)-[:WATCHED {rating:4}]->(s);
